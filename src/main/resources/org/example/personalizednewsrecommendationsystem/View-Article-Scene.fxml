<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.personalizednewsrecommendationsystem.View_Article_Scene_Controller"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <!-- ImageView for displaying the article image -->
        <ImageView fx:id="articleImageView"
                   layoutX="20.0"
                   layoutY="20.0"
                   fitWidth="200.0"
                   preserveRatio="true" />

        <!-- ScrollPane for the description -->
        <ScrollPane layoutX="20.0" layoutY="240.0" prefWidth="560.0" prefHeight="130.0" vbarPolicy="ALWAYS" hbarPolicy="NEVER">
            <content>
                <!-- Label for displaying the article description -->
                <Label fx:id="descriptionLabel"
                       wrapText="true"
                       prefWidth="560.0" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
