<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.personalizednewsrecommendationsystem.View_Article_Scene_Controller">
    <children>
        <!-- ImageView for displaying the article image -->
        <ImageView fx:id="articleImageView" fitWidth="200.0" layoutX="20.0" layoutY="20.0" preserveRatio="true" />

        <!-- ScrollPane for the description -->
        <ScrollPane hbarPolicy="NEVER" layoutX="20.0" layoutY="240.0" prefHeight="130.0" prefWidth="560.0" vbarPolicy="ALWAYS">
            <content>
                <!-- Label for displaying the article description -->
                <Label fx:id="descriptionLabel" prefWidth="560.0" wrapText="true" />
            </content>
        </ScrollPane>
        <Button fx:id="liked" layoutX="311.0" layoutY="133.0" mnemonicParsing="false" onAction="#onLikedButtonClick" text="Like" />
        <Button fx:id="skipped" layoutX="403.0" layoutY="67.0" mnemonicParsing="false" onAction="#onSkippedButtonClick" text="Skip" />
        <Button fx:id="read" layoutX="400.0" layoutY="200.0" mnemonicParsing="false" onAction="#onReadButtonClick" text="Read" />
      <Button layoutX="518.0" layoutY="104.0" mnemonicParsing="false" onAction="#onBackToViewArticleList" text="Back" />
    </children>
</AnchorPane>
